<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#d7d9d6d6"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="0dp"
        app:cardMaxElevation="1dp"
        android:translationZ="2dp"
        app:cardElevation="0.7dp"
        app:cardPreventCornerOverlap="true"
        android:id="@+id/cardView">
<RelativeLayout
    android:background="#e3f9f9f9"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:layout_width="40dp"
        android:id="@+id/img"
        android:scaleY="1.4"
        android:scaleX="1.4"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_event_note_black_24dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/txname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/img"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="10dp"
        android:text="Title :" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/txname"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="10dp"
        android:text="" />
    <TextView
        android:id="@+id/txhobby"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:textColor="#717171"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/txname"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="10dp"
        android:text="Date :" />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_height="25dp"
        android:textSize="20dp"
        android:textColor="#717171"
        android:layout_toRightOf="@+id/txhobby"
        android:layout_below="@+id/name"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="10dp"
        android:text="" />

    <TextView
        android:id="@+id/txshop"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/img"
        android:layout_below="@id/txhobby"
        android:paddingLeft="10dp"
        android:text="Shop Name:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#787978" />
    <TextView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/txshop"
        android:layout_below="@id/date"
        android:paddingLeft="10dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#787978" />
</RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>